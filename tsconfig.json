{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": ["ES2022", "dom"],
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src/",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dts",
    "noEmit": true,
    "jsx": "react-jsx",
    /* Additional Checks */
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["*.cjs", "*.js"],
  "include": ["src"]
}
